<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
    <link rel="stylesheet" href="/css/transactions.css">
</head>
<body>
    <!-- this is where all the transactions happen to apply money into your account -->
    <h1>Your Transactions</h1>
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= transaction.type %></td>
                    <td><%= transaction.amount ? parseFloat(transaction.amount).toFixed(2) : '0.00' %></td>
                    <td><%= transaction.description %></td>
                    <td><%= transaction.createdAt ? transaction.createdAt.toLocaleDateString() : 'N/A' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>